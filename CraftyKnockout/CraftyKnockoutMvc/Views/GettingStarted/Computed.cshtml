<h2>Observables II - Computed</h2>
<div class="row">
    <div class="col-md-4">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Example Calculator</h3>
            </div>
            <div class="panel-body">
            Net Amount:
            <div class="input-group">
                <span class="input-group-addon">£</span>
                <input class="form-control rightalign" data-bind="value: NetPrice, valueUpdate: 'keyup'" />
            </div>

            Vat Rate:
            <div class="input-group">
                <span class="input-group-addon">%</span>
                <input class="form-control rightalign" data-bind="value: VatRate, valueUpdate: 'keyup'" />
            </div>

            Vat Amount:
            <div class="input-group">
                <span class="input-group-addon">£</span>
                <input class="form-control rightalign" data-bind="value: VatAmount" readonly />
            </div>

            Gross Amount:
            <div class="input-group">
                <span class="input-group-addon">£</span>
                <input class="form-control rightalign" data-bind="value: GrossPrice" readonly />
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="notes">
            notes on computed
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/knockout-3.0.0.js"></script>
    <script src="~/Scripts/GettingStarted/Computed.js"></script>
}
